<%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
            <% @post.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :lang %>
      <%= f.collection_select(:lang, Language.collection, :cut, :name, :value => I18n.locale, :prompt => false) %>
    </div>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :short %>
      <%= f.text_area :short, :class => "short" %>
    </div>
    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body, :class => "full" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
