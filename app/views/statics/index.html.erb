<h1>Listing statics</h1>

<table>
  <tr>
    <th>Title en</th>
    <th>Title ru</th>
    <th>Short en</th>
    <th>Short ru</th>
    <th>Body en</th>
    <th>Body ru</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statics.each do |static| %>
  <tr>
    <td><%= static.title_en %></td>
    <td><%= static.title_ru %></td>
    <td><%= static.short_en %></td>
    <td><%= static.short_ru %></td>
    <td><%= static.body_en %></td>
    <td><%= static.body_ru %></td>
    <td><%= link_to 'Show', static %></td>
    <td><%= link_to 'Edit', edit_static_path(static) %></td>
    <td><%= link_to 'Destroy', static, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

